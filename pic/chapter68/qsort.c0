  int[] ge_arr = alloc_array(int, upper - lower);
  int lt_count = 0;
  int ge_count = 0;
  int pivot = A[pivot_index];

  while (lt_count + ge_count < upper - lower)
  //@loop_invariant 0 <= lt_count && 0 <= ge_count;
