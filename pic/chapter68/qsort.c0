bool check_qsort() {
  int seed = 0xc0c0ffee;
  rand_t gen = init_rand(seed);
  int arr = alloc_array(int, 100);
  for (int i = 0; i < 100; i+=1) {
    arr[i] = rand(gen);
  }
  sort(arr, 0, 100);

  int brr = alloc_array(int, 100);
  for (int i = 0; i < 100; i+=1) {
    brr[i] = rand(gen);
  }
  sort_stable(brr, 0, 100);
  return true;
}   

